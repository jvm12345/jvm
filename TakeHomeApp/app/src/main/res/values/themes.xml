<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="HomeAppCompactThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:textColorPrimary">@color/dark_grey_blue</item>
        <item name="android:textColorSecondary">@color/darker_grey_blue</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
    </style>

    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">1dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

</resources>